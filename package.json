{
  "name": "hashland",
  "private": true,
  "description": "",
  "license": "Unlicense",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "run-s build:css build:remix",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --build-command echo --watch",
    "dev:css": "npm run generate:css -- --watch",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "generate:css": "tailwindcss -i ./styles/main.css -o ./app/main.css",
    "deploy": "wrangler publish"
  },
  "dependencies": {
    "@giscus/react": "^1.1.2",
    "@heroicons/react": "^1.0.6",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-workers": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@tailwindcss/typography": "^0.5.2",
    "cross-env": "^7.0.3",
    "feed": "^4.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "miniflare": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.22"
  },
  "engines": {
    "node": ">=16.13"
  }
}

    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.11.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1"
